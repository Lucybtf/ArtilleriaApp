<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    tools:context="com.example.artilleriaapp.artilleriaapp.Archivo">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nacionalidad del Plano"
        android:id="@+id/nacionalidad"
        android:layout_below="@+id/tipo_arma" />
    <Spinner
        android:id="@+id/spinnerarchivonacionalidad"
        android:layout_width="match_parent"
        android:layout_height="30pt"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/nacionalidad"
        android:spinnerMode="dropdown" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nombre del Archivo"
        android:id="@+id/nombrearchivo"
        android:layout_alignRight="@+id/nacionalidad"
        android:layout_alignEnd="@+id/nacionalidad"
        android:layout_below="@+id/spinnerarchivonacionalidad"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="200pt"
        android:layout_height="wrap_content"
        android:id="@+id/edit_nombre_archivo"
        android:layout_below="@+id/nombrearchivo"
        android:layout_alignLeft="@+id/nombrearchivo"
        android:layout_alignStart="@+id/nombrearchivo" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Autor"
        android:id="@+id/autor"
        android:layout_below="@+id/edit_nombre_archivo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/edit_autor"
        android:layout_below="@+id/autor"
        android:layout_alignLeft="@+id/autor"
        android:layout_alignStart="@+id/autor"
        android:layout_alignRight="@+id/spinnerarchivonacionalidad"
        android:layout_alignEnd="@+id/spinnerarchivonacionalidad" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="SecciÃ³n"
        android:id="@+id/material"
        android:layout_alignParentTop="false"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edit_autor"
        android:layout_alignParentEnd="false"
        android:layout_alignParentLeft="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_seccion"
        android:layout_below="@+id/material"
        android:layout_alignLeft="@+id/edit_nombre_archivo"
        android:layout_alignStart="@+id/edit_nombre_archivo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Legajo"
        android:id="@+id/legajo"
        android:layout_below="@+id/edit_seccion"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_legajo"
        android:layout_below="@+id/legajo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/edit_seccion"
        android:layout_alignEnd="@+id/edit_seccion" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Fecha"
        android:id="@+id/fecha_plano"
        android:layout_below="@+id/edit_legajo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_below="@+id/fecha_plano"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/edit_legajo"
        android:layout_alignEnd="@+id/edit_legajo" />


</RelativeLayout>
